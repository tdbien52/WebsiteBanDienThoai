@model TranDinhBien_BanHang.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@section sidemenu{
    <ul id="sideManu" class="nav nav-tabs nav-stacked">
        <li class="subMenu open">
            <a>Danh mục</a>
            <ul>
                @foreach (var item in ViewBag.Category)
                {

                    <li>
                        <a href="/product/index/@item.CategoryID">@item.CategoryName</a>
                    </li>
                }

            </ul>
        </li>
    </ul>
}

<div class="span9">
    <ul class="breadcrumb">

        <li class="active">Chi tiết sản phẩm</li>
    </ul>
    <div class="row" style="margin:40px">
        <div id="gallery" class="span3">
            <a href="~/themes/images/products/@Model.Avatar" title="@Model.ProductName" >
                <img src="~/themes/images/products/@Model.Avatar" style="width:350px" alt="@Model.ProductName" />
            </a>

        </div>
        <div class="span6">
            <h3>@Model.ProductName </h3>
            <hr class="soft" />
            <form class="form-horizontal qtyFrm">
                <div class="control-group">
                    <label class="control-label"><span>@string.Format("{0:0,000,000₫}", Model.Price)</span></label>
                    <div class="controls">
                        @*<input type="number" class="span1" placeholder="SL." />*@
                        <button type="submit" class="btn btn-large btn-primary pull-right">
                            @Html.ActionLink("Thêm giỏ hàng", "Add", "Cart", new { id = Model.ProductID }, null) 
                            @*@Html.ActionLink("Sửa thông tin", "Edit", new { id = Model.ProductID }) |*@
                            <i class=" icon-shopping-cart"></i>
                        </button>
                    </div>
                </div>
            </form>

            <hr class="soft" />
            <h4>@Model.Status</h4>
            <p>
                @Model.FullDescription
            </p>
            <a class="btn btn-small pull-right" href="#detail">Thêm chi tiết</a>
            <br class="clr" />
            <a href="#" name="detail"></a>
            <hr class="soft" />
        </div>

        <div class="span9">
            <ul id="productDetail" class="nav nav-tabs">
                <li class="active"><a href="#home" data-toggle="tab">Thông tin chi tiết sản phẩm</a></li>

            </ul>
            <div id="myTabContent" class="tab-content">
                <div class="tab-pane fade active in" id="home">
                    <h4>Thông Tin Sản Phẩm</h4>
                    <table class="table table-bordered">
                        <tbody>
                            <tr class="techSpecRow"><th colspan="2">Thông tin chi tiết sản phẩm</th></tr>
                            <tr class="techSpecRow"><td class="techSpecTD1">Loại sản phẩm: </td><td class="techSpecTD2">@ViewData["CategoryName"]</td></tr>
                            <tr class="techSpecRow"><td class="techSpecTD1">Thương hiệu: </td><td class="techSpecTD2">@Model.Brand.BrandName</td></tr>
                            <tr class="techSpecRow"><td class="techSpecTD1">Giá Bán: </td><td class="techSpecTD2">@string.Format("{0:0,000,000₫}", Model.Price)</td></tr>
                            <tr class="techSpecRow"><td class="techSpecTD1">Ngày mở bán</td><td class="techSpecTD2">@Model.CreateAt</td></tr>
                           
                        </tbody>
                    </table>

                    <h5>Features</h5>
                    <p>
                        @Model.FullDescription
                    </p>

                </div>
                <a href="/Product">Trở về danh sách sản phẩm</a>
            </div>
        </div>
    </div>
</div>
