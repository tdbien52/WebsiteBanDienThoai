            @using (Html.BeginForm("Login", "Account", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/dorm-data", @class = "form-horizontal" }))
            {


                <div class="form-floating mb-3">

                    @Html.TextBoxFor(r => r.Username, new { @class = "form-control", id = "Username", type = "text", placeholder = "Username" })
                    <label for="Username">User name</label>
                    @Html.ValidationMessageFor(r => r.Username)
                </div>
                <div class="form-floating mb-3">

                    @Html.TextBoxFor(r => r.Password, new { @class = "form-control", id = "Password", type = "password", placeholder = "Password" })
                    <label for="Password">Password</label>
                    @Html.ValidationMessageFor(r => r.Password)
                </div>

                <div class="form-floating mb-3">
                    <div class="controls">
                        @Html.ValidationSummary()
                    </div>
                </div>
                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                    <button class="btn btn-success">Đăng nhập</button>
                    <a href="/home" class="btn btn-danger">Hủy</a>
                </div>

            }
        </div>
    </div>
</div>
